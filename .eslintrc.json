{
	"root": true,
	"env": {
		"es2020": true,
		"node": true,
		"commonjs": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1,
				"CallExpression": {
					"arguments": 1
				}
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"eol-last": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"default-case": "error",
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"no-case-declarations": "off",
		"@typescript-eslint/no-non-null-assertion": "off"
	},
	"reportUnusedDisableDirectives": true
}
